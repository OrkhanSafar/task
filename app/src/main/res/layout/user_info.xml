<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constreintLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="3dp"
    android:background="#F1AAC2">


    <TextView
        android:id="@+id/textViewInfo"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:text="TextView"
        android:textSize="16sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toEndOf="@+id/imageViewOnem"
        app:layout_constraintTop_toTopOf="@+id/imageViewOnem" />

    <TextView
        android:id="@+id/textViewAlert"
        android:layout_width="100dp"
        android:layout_height="32dp"
        android:layout_marginTop="65dp"
        android:textAlignment="center"
        android:textColor="#CC1010"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/textViewInfo"
        app:layout_constraintTop_toBottomOf="@+id/textViewInfo" />

    <ImageView
        android:id="@+id/imageViewOnem"
        android:layout_width="121dp"
        android:layout_height="135dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />
</androidx.constraintlayout.widget.ConstraintLayout>
